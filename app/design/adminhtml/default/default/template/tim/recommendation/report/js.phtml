<script type="text/javascript">
    /* settings for popup */
    function addNotePopup(recom_id) {
        if (document.getElementById('recomId')) {
            document.getElementById("recomId").remove();
        }
        var input = document.createElement("input");
        input.setAttribute("type", "hidden");
        input.setAttribute("id", "tim-note-info");
        input.setAttribute("data-recomId", recom_id);
        //append to form element that you want .
        if (document.getElementById('tim_recommendation_opinion_grid_table')) {
            input.setAttribute("data-objectName", 'tim_recommendation');
            document.getElementById('tim_recommendation_opinion_grid_table').appendChild(input);
        } else if (document.getElementById('tim_recommendation_comment_grid_table')) {
            input.setAttribute("data-objectName", 'tim_recommendation');
            document.getElementById('tim_recommendation_comment_grid_table').appendChild(input);
        } else if (document.getElementById('tim_recommendation_malpractice_grid_table')) {
            input.setAttribute("data-objectName", 'tim_recom_malpractice');
            document.getElementById('tim_recommendation_malpractice_grid_table').appendChild(input);
        }

        var url = '<?php echo $this->getUrl("adminhtml/note/showNotePopup") ?>recom_id/' + recom_id;

        if ($('browser_window') && typeof(Windows) != 'undefined') {
            Windows.focus('browser_window');
            return;
        }

        var dialogWindow = Dialog.info(null, {
            closable: true,
            resizable: false,
            draggable: true,
            className: 'magento',
            windowClassName: 'popup-window',
            title: 'Notka',
            top: 50,
            width: 550,
            height: 170,
            zIndex: 1000,
            recenterAuto: false,
            hideEffect: Element.hide,
            showEffect: Element.show,
            id: 'browser_window',
            url: url,
            onClose: function (param, el) {

            }
        });
    }

    function displayRecommendationPopup(recom_id) {
        if (document.getElementById('recomId')) {
            document.getElementById("recomId").remove();
        }
        var input = document.createElement("input");
        input.setAttribute("type", "hidden");
        input.setAttribute("id", "recomId");
        input.setAttribute("name", "recomId");
        input.setAttribute("value", recom_id);
        document.getElementById('tim_recommendation_comment_grid_table').appendChild(input);

        var url = '<?php echo $this->getUrl("adminhtml/opinionInfo/infoPopup") ?>id/' + recom_id;

        if ($('browser_window') && typeof(Windows) != 'undefined') {
            Windows.focus('browser_window');
            return;
        }

        var dialogWindow = Dialog.info(null, {
            closable: true,
            resizable: false,
            draggable: true,
            className: 'magento',
            windowClassName: 'popup-window',
            title: 'Szczegóły opinii',
            top: 50,
            width: 550,
            height: 400,
            zIndex: 1000,
            recenterAuto: false,
            hideEffect: Element.hide,
            showEffect: Element.show,
            id: 'browser_window',
            url: url,
            onClose: function (param, el) {

            }
        });
    }

    function closePopup() {
        Windows.close('browser_window');
    }
</script>
