<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <recommendation_index_add>
        <reference name="root">
            <action method="setTemplate"><template>page/3columns.phtml</template></action>
        </reference>
        <reference name="header">
            <block type="page/header" name="header">
                <action method="setTemplate"><template>tim/recommendation/add/header.phtml</template></action>
            </block>
        </reference>
        <reference name="left">
            <block type="tim_recommendation/recommendation" name="left.recommendation.view" template="tim/recommendation/add/left.phtml" />
        </reference>
        <reference name="right">
            <block type="tim_recommendation/recommendation" name="right.recommendation.view" template="tim/recommendation/add/right.phtml" />
        </reference>
        <reference name="content">
            <block type="tim_recommendation/recommendation" name="center.recommendation.view" template="tim/recommendation/add/center.phtml" />
        </reference>
    </recommendation_index_add>
</layout>