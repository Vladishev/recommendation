    <catalog_product_view>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/tim/recommendation/jquery-1.7.1.min.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/tim/recommendation/jquery.form.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/tim/recommendation/recommendation.js</name></action>
            <action method="addItem"><type>skin_css</type><name>css/tim/recommendation/styles.css</name></action>
        </reference>
        <reference name="product.info">
            <block type="tim_recommendation/recommendation" name="recommendation.add" template="tim/recommendation/add.phtml">
                <block type="tim_recommendation/recommendation" name="header.recommendation.add" template="tim/recommendation/add/header.phtml" />
                <block type="tim_recommendation/recommendation" name="left.recommendation.add" template="tim/recommendation/add/left.phtml" />
                <block type="tim_recommendation/recommendation" name="right.recommendation.add" template="tim/recommendation/add/right.phtml" />
                <block type="tim_recommendation/recommendation" name="content.recommendation.add" template="tim/recommendation/add/content.phtml" />
            </block>
            <block type="tim_recommendation/recommendation" name="recommendation.view" template="tim/recommendation/view.phtml">
                <block type="tim_recommendation/recommendation" name="header.recommendation.view" template="tim/recommendation/view/header.phtml" />
                <block type="tim_recommendation/recommendation" name="left.recommendation.view" template="tim/recommendation/view/left.phtml" />
                <block type="tim_recommendation/recommendation" name="right.recommendation.view" template="tim/recommendation/view/right.phtml" />
                <block type="tim_recommendation/recommendation" name="content.recommendation.view" template="tim/recommendation/view/content.phtml" />
            </block>
        </reference>
        <reference name="content">
            <block type="tim_recommendation/recommendation" name="recommendation.loginpopup" template="tim/recommendation/loginpopup.phtml" />
        </reference>
    </catalog_product_view>
    <recommendation_user_profile>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/tim/recommendation/jquery-1.7.1.min.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/tim/recommendation/customerView.js</name></action>
            <action method="addItem"><type>skin_css</type><name>css/tim/recommendation/styles.css</name></action>
        </reference>
        <reference name="content">
            <block type="tim_recommendation/recommendation" name="center.recommendation.profile" template="tim/recommendation/profile/content.phtml" />
        </reference>
    </recommendation_user_profile>
