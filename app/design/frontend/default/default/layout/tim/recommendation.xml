    <recommendation_index_confirm>
        <reference name="root">
            <action method="setTemplate"><template>page/empty.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="tim_recommendation/recommendation" name="content.recommendation.confirm" template="tim/recommendation/confirm/confirm.phtml" />
        </reference>
