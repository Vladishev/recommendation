            <action method="addItem"><type>skin_css</type><name>css/tim/recommendation/styles.css</name></action>
        </reference>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper"> <!-- target parent block -->
            <block type="customer/form_edit" name="customer_edit" template="tim/recommendation/profile/recommendation_tab.phtml"/>
